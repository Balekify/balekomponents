{
  "name": "balekomponents",
  "version": "0.0.1",
  "description": "Suite of c(balek)omponents",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint src --fix",
    "start": "npm run storybook",
    "storybook": "start-storybook -p 6006",
    "format": "prettier --write 'src/**/*.{js,css}'",
    "clean-dist": "rm -rf dist",
    "build": "npm run clean-dist && NODE_ENV=production babel src --out-dir dist --copy-files",
    "build:watch": "npm run clean-dist && NODE_ENV=production babel src --watch --out-dir dist --copy-files",
    "precommit": "lint-staged && npm test",
    "prepublishOnly": "npm run build",
    "build-storybook": "build-storybook"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "src/**/*.css": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Balekify/balekomponents.git"
  },
  "keywords": [
    "components",
    "react",
    "toolsuite"
  ],
  "author": "Balekify",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Balekify/balekomponents/issues"
  },
  "homepage": "https://github.com/Balekify/balekomponents#readme",
  "peerDependencies": {
    "react": "16.0.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.2.16",
    "@storybook/addon-links": "^3.2.16",
    "@storybook/react": "^3.2.16",
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "eslint": "^4.12.1",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "lodash": "^4.17.4",
    "prop-types": "^15.6.0"
  }
}
